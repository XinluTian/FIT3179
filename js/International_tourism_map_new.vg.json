{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "International Tourist in Australia Over Time",
  "width": 700,
  "height": 500,
  "projection": {
    "type": "equirectangular"
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 1991,
        "max": 2023,
        "step": 1,
        "name": "Year:  "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/XinluTian/FIT3179/refs/heads/main/js/world_topo.geo.json",
        "format": {
          "type": "topojson",
          "feature": "world.geo"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.name",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/XinluTian/FIT3179/refs/heads/main/data/reshaped_yearly_data.csv"
      },
      "transform": [
        {
          "lookup": "LOCATION",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/XinluTian/FIT3179/refs/heads/main/js/world_topo.geo.json",
              "format": {
                "type": "topojson",
                "feature": "world.geo"
              }
            },
            "key": "properties.name"
          },
          "as": "geo"
        },
        {
          "filter": "datum.TIME == Year_selection"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#fff",
        "strokeWidth": 0.5
      },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "Value",
          "type": "quantitative",
          "scale": {
            "domain": [1, 250, 1000, 5000, 10000, 50000, 100000, 300000, 500000],
            "range": ["#faeee6", "#f6ddcd", "#ecba9b", "#e39869", "#d97537", "#d05305", "#a64204", "#820300", "#000000"],
            "type": "threshold"
          },
          "legend": {
            "format": ".2s",
            "title": "No. of Tourists",
            "orient": "bottom-right", 
            "direction": "horizontal"
          }
        },
        "tooltip": [
          {
            "field": "LOCATION",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "TIME",
            "type": "quantitative",
            "title": "Year"
          },
          {
            "field": "Value",
            "type": "quantitative",
            "title": "No. of Tourists",
            "format": ".2f"
          }
        ]
      }
    }
  ],
  "config": {
    "title": {
      "font": "Roboto Condensed",
      "fontSize": 14,
      "dx": 0
    }
  }
}
